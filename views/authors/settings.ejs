<!-- views/settings.ejs -->
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Author Settings Page</title>
</head>
    <body class="flex flex-col min-h-screen bg-gradient-to-r from-gray-500 to-gray-100 bg-cover">
        <nav class="flex items-center justify-between bg-blue-900 p-4 w-full">
        <div class="flex items-center space-x-4">
            <img src="images/logo.png" class="h-14 w-auto" alt="Logo">
        </div>
        <div class="flex space-x-4">
            <button class="px-4 py-2 bg-gray-700 text-white rounded" onclick="window.location.href='/author'">Back</button>
            <button class="px-4 py-2 bg-gray-700 text-white rounded" onclick="window.location.href='/author/edit'">Create an article</button>
            <button class="px-4 py-2 bg-red-600 text-white rounded logoutBtn" onclick="window.location.href='/logout'">Logout</button>
        </div>
    </nav>
    
    <div class="text-white mt-12 px-4 text-center">
        <h1 class="text-5xl font-semibold leading-normal">Settings Page</h1>
        <div class="flex justify-center items-center space-x-4 text-2xl">
            <h2><%= author.blog_title %></h2>
            <h3>By: <%= author.author_name %></h3>
        </div>
        <br><br>

        <div class="text-gray-800">
            <div class="bg-white rounded-lg shadow-lg p-8 max-w-3xl mx-auto text-left mb-8">
                <h2 class="text-3xl font-bold mb-4">Settings</h2>
                <form action="/author/settings" method="post" onsubmit="return validateForm()">
                    <div class="mb-4">
                        <label for="blogTitle" class="block text-gray-700">Blog Title:</label>
                        <input type="text" id="blogTitle" name="blogTitle" value="<%= author.blog_title %>" class="mt-2 p-2 w-full border border-gray-300 rounded" required>
                    </div>
                    <div class="mb-4">
                        <label for="authorName" class="block text-gray-700">Author Name:</label>
                        <input type="text" id="authorName" name="authorName" value="<%= author.author_name %>" class="mt-2 p-2 w-full border border-gray-300 rounded" required>
                    </div>
                    <button type="submit" class="w-full px-4 py-2 bg-cyan-700 text-white rounded-md hover:bg-indigo-700 focus:outline-none focus:bg-indigo-700 settingsBtn">Submit</button>
                </form>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        function validateForm() {
            const blogTitle = document.getElementById('blogTitle').value;
            const authorName = document.getElementById('authorName').value;
            if (!blogTitle || !authorName) {
                alert("All fields must be filled out");
                return false;
            }
            return true;
        }

        $(".settingsBtn").click(function () {
            alert("Settings saved");
        });

        $(".logoutBtn").click(function () {
            alert("Logged out");
        });
    </script>    
</body>
</html>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= product.product_name %></title>
    <link rel="stylesheet" href="/styles/style.css">
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-amber-50">
    <div class="flex flex-col min-h-screen">
        <!-- Navigation bar -->
        <%- include('navbar') %>

        <main class="flex flex-1 p-8">
            <div class="flex flex-col md:flex-row md:space-x-10 w-full">
                <div class="flex-1">
                    <img src="<%= product.image_url %>" alt="<%= product.name %>" class="w-full h-auto rounded-lg shadow-lg">
                    <div class="product-thumbnails mt-4 flex space-x-2">
                        <% if (product.additional_images) { %>
                            <% product.additional_images.split(',').forEach(function(image) { %>
                                <img src="<%= image %>" alt="Thumbnail" class="w-20 h-20 rounded-lg border">
                            <% }); %>
                        <% } %>
                    </div>
                </div>
                <div class="flex-1">
                    <h1 class="text-4xl font-bold mb-4"><%= product.product_name %></h1>
                    <p class="text-lg text-gray-700 mb-4"><%= product.condition %></p>
                    <p class="text-base text-gray-600 mb-8"><%= product.content_description %></p>
                    <button class="bg-red-600 text-white py-2 px-4 rounded-lg text-lg shadow-lg hover:bg-red-700 transition duration-200">Make an Offer</button>
                </div>
            </div>
        </main>

        <!-- Footer -->
        <%- include('footer') %>
    </div>
</body>
</html>

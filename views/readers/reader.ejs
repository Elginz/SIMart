<!-- views/reader.ejs -->
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Readers Page</title>
</head>
    <div class="flex flex-col min-h-screen bg-gradient-to-r from-gray-500 to-gray-100 bg-cover">
        <nav class="flex items-center justify-between bg-blue-900 p-4 w-full">
        <div class="flex items-center space-x-4">
            <img src="images/logo.png" class="h-14 w-auto" alt="Logo"> 
        </div>
        <div class="flex space-x-4">
                <button class="px-4 py-2 bg-gray-700 text-white rounded" onclick="window.location.href='/'">Back</button>
        </div>
    </nav>
    
    <div class="text-white mt-12 px-4 text-center">
        <h1 class="text-5xl font-semibold leading-normal">Welcome to the Reader Page!</h1>
        <div class="flex justify-center items-center space-x-4 text-2xl">
            <h2><%= blog_title %></h2>
            <h3>By: <%= author_name %></h3>
        </div>
       <br>
        <h2 class ="text-2xl">~Articles~</h2>
        <br>
                <ul>
                    <% publishedArticles.forEach(article => { %>
                        <div class = "text-gray-800">
                        <li class=" text-left bg-white rounded-lg shadow-lg p-8 max-w-sm w-full mx-auto" >
                            <p><strong>Title: </strong><%= article.title %></p>
                            <p><strong>Published: </strong> <em><%= article.published_at %></em></p>
                            <p><strong>Last Modified: </strong><em><%= article.last_modified %></em></p>
                            <p><strong>Reads ðŸ“–: </strong><%= article.reads %></p>
                            <p><strong>Likes ðŸ©µ:</strong><%= article.likes %></p>
                            <br>
                            <button  class="w-full px-2 py-2 bg-cyan-700 text-white rounded-md hover:bg-indigo-700 focus:outline-none focus:bg-indigo-700"
                                     onclick="window.location.href='/reader/readerArticle/<%= article.id %>'">Read More</button>
                        </li>
                        <br>
                    <% }); %>
                </div>
            </ul>
</div>
</html>

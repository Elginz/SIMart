<!-- views/index.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Home</title>
</head>
<body>
        <div class="flex flex-col min-h-screen bg-gradient-to-r from-gray-500 to-gray-100 bg-cover">
            <nav class="flex items-center justify-between bg-blue-900 p-4 w-full">
            <div class="flex items-center space-x-4">
                <img src="images/logo.png" class="h-14 w-auto" alt="Logo"> 
            </div>

            <div class="flex space-x-4">
                <% if (user && user.authorised) { %>
                    <button class="px-4 py-2 bg-gradient-to-r from-cyan-700 to-gray-600 text-white rounded" onclick="window.location.href='/author'">Access Author Page</button>
                <% } %>
                <button class="px-4 py-2 bg-gradient-to-r from-gray-600 to-cyan-700 text-white rounded" onclick="window.location.href='/reader'">Reader Page</button>
                <% if (user) { %>
                    <button class="px-4 py-2 bg-red-700 text-white rounded logoutBtn" onclick="window.location.href='/logout'">Logout</button>
                <% } else { %>
                    <button class="px-4 py-2 bg-cyan-700 text-white rounded" onclick="window.location.href='/login'">Login</button>
                    <button class="px-4 py-2 bg-cyan-700 text-white rounded" onclick="window.location.href='/register'">Register</button>
                <% } %>
            </div>
        </nav>
        
        <div class="text-white mt-48 px-4">
            <h1 class="text-6xl font-semibold leading-normal">Welcome to SMart</h1>
            <br>
            <p>Please Log into the following authorised account to access the different pages. </p>
            <br>
            <p>For Author use to access author pages, [Username: author] | [Password: author123]</p>
            <br>
            <p>For Readers use to access reader pages, [Username: reader] | [Password: reader123]</p>

        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script type="text/javascript">
        $(".logoutBtn").click(function () {
            alert("Logged out");
        });
    </script>
</body>
</html>

